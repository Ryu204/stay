{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24
    },
    "configurePresets" : [
        {
            "name" : "base",
            "description": "remove broken tests of dependencies",
            "cacheVariables": {
                "BOX2D_BUILD_TESTBED" : "OFF",
                "BOX2D_BUILD_UNIT_TESTS" : "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS" : "TRUE"
            }
        },
        {
            "name" : "fast",
            "description" : "fast compilation",
            "inherits" : "base", 
            "generator" : "Ninja",
            "binaryDir" : "build/fast"
        },
        {
            "name" : "default",
            "description" : "default compile mode",
            "inherits" : "base",
            "binaryDir" : "build/default"
        },
        {
            "name": "py",
            "description": "python binding for scene load process",
            "inherits": "base",
            "binaryDir": "build/py",
            "cacheVariables": {
                "USER_DEFINED_PYTHON_BINDING": "EXISTS",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "clang-tidy",
            "inherits" : "default",
            "binaryDir" : "build/clang-tidy",
            "cacheVariables": {
                "USER_DEFINED_CLANG_TIDY" : "clang-tidy;--header-filter=${sourceDir}/*.hpp"
            }
        },
        {
            "name": "py-lint",
            "inherits": "clang-tidy",
            "binaryDir": "build/py-lint",
            "cacheVariables": {
                "USER_DEFINED_PYTHON_BINDING": "EXISTS"
            }
        },
        {
            "name": "ci",
            "inherits" : "default"
        },
        {
            "name" : "ci-lint",
            "inherits" : "clang-tidy"
        },
        {
            "name": "ci-py",
            "inherits": "py"
        },
        {
            "name": "ci-py-lint",
            "inherits": "py-lint"
        }
    ]
}